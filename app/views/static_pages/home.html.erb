<% if logged_in? %>
  <div class="col-md-4">
      <div class="row">
        <%= render "shared/user_info" %>
        <%= render "shared/statsfl" %>
      </div>
      <hr>
      <div class="row">
        <%= render "shared/post_form" %>
      </div>
      <hr>
      <div class="row">
        <%= render "shared/album_form" %>
      </div>
      <div class="row">
        <%= render "shared/album_list" %>
      </div>
      <div class="row">
        <%= render "shared/index_user" %>
      </div>
  </div>
  <div class="col-md-8">
    <%= render "shared/feed" %>
  </div>

<% else %>
  <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
<% end %>

