<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="h-top" id="home">
  <div class="top-header">
    <ul class="cl-effect-16 top-nag">
      <li><%= link_to t("layouts._header.home"), root_path %></li>
      <% if logged_in? %>
          <%= render "shared/show_noti" %>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t("layouts._header.signup"), signup_path %></li>
          <li><%= link_to t("layouts._header.login"), login_path %></li>
        <% end %>
    </ul>
    <div class="search-box">
      <div class="b-search">
        <%= form_tag posts_path, method: :get, class: "search-input", id: "form_search" do %>
         <%= text_field_tag "find", params[:find], placeholder: "Search",
            id: "autocomplete" %>
        <% end %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
</header>
